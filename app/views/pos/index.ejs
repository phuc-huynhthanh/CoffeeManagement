  completeBtn.addEventListener('click', () => {
    if (!selectedBanId) return alert('Vui l√≤ng ch·ªçn b√†n!');
    if (!hoaDonTheoBan[selectedBanId]) hoaDonTheoBan[selectedBanId] = [];
    hoaDonTheoBan[selectedBanId].push(...bill.map(item => ({ ...item })));
