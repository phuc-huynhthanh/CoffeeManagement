    alert(`B·∫°n ƒë√£ ch·ªçn ${banList.find(b => b.ban_id === ban_id).ten_ban}, nh·∫•n Ho√†n t·∫•t ƒë·ªÉ l∆∞u s·∫£n ph·∫©m`);
    completeBtn.classList.remove('hidden');
    chooseTableBtn.classList.add('hidden');
