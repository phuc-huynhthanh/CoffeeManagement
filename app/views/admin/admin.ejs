  } else {
    fetch(`http://localhost:3000/nhanvien/taikhoan/${user.tai_khoan_id}`)
      .then(res => res.json())
      .then(data => {
        usernameElement.textContent = data.ho_ten ? `üë§ ${data.ho_ten}` : "üë§ Kh√¥ng r√µ t√™n";
        if (data.ten_vai_tro !== "Admin") {
