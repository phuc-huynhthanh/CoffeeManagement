          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(formData),
        });

        const dataLogin = await resLogin.json();
        if (!resLogin.ok) throw new Error(dataLogin.thong_bao || "ÄÄƒng nháº­p tháº¥t báº¡i");

        // ğŸŸ¢ Gá»i API láº¥y thÃ´ng tin ngÆ°á»i dÃ¹ng
        const resInfo = await fetch("http://localhost:3000/taikhoan/thongtin", {
          headers: { "Authorization": `Bearer ${dataLogin.token}` },
        });

        const dataInfo = await resInfo.json();
        if (!resInfo.ok) throw new Error(dataInfo.thong_bao || "KhÃ´ng láº¥y Ä‘Æ°á»£c thÃ´ng tin ngÆ°á»i dÃ¹ng");

        const user = dataInfo.du_lieu;

        // âœ… LÆ°u thÃ´ng tin ngÆ°á»i dÃ¹ng vÃ  token vÃ o localStorage
        localStorage.setItem("token", dataLogin.token);
        localStorage.setItem("user", JSON.stringify(user));

        msg.textContent = "ÄÄƒng nháº­p thÃ nh cÃ´ng! Äang chuyá»ƒn hÆ°á»›ng...";
        msg.classList.add("text-green-600");

        // ğŸ§­ Chuyá»ƒn hÆ°á»›ng theo vai trÃ²
        setTimeout(() => {
          if (user.vai_tro_id === 1) {
            window.location.href = "/admin";
          } else {
            window.location.href = "/view/pos";
          }
        }, 1000);

      } catch (err) {
        msg.textContent = err.message;
        msg.classList.add("text-red-600");
      }
    });
  </script>

