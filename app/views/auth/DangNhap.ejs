<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>ﾄ斉ハg nh蘯ｭp</title>
  <link 
    href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" 
    rel="stylesheet" 
  />
  <link rel="icon" href="data:," /> <!-- Ngﾄハ l盻擁 favicon.ico 404 -->
</head>
<body class="bg-gray-100 flex items-center justify-center h-screen">

  <div class="bg-white p-8 rounded-xl shadow-lg w-96">
    <h2 class="text-2xl font-bold mb-6 text-center">ﾄ斉ハg nh蘯ｭp</h2>
    
    <form id="loginForm" class="space-y-4">
      <div>
        <label class="block text-gray-700 mb-1">Tﾃｪn ﾄ惰ハg nh蘯ｭp</label>
        <input 
          type="text" 
          name="ten_dang_nhap" 
          class="w-full border border-gray-300 rounded px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:outline-none" 
          required 
        />
      </div>
      <div>
        <label class="block text-gray-700 mb-1">M蘯ｭt kh蘯ｩu</label>
        <input 
          type="password" 
          name="mat_khau" 
          class="w-full border border-gray-300 rounded px-3 py-2 focus:ring-2 focus:ring-blue-400 focus:outline-none" 
          required 
        />
      </div>
      <button 
        type="submit" 
        class="w-full bg-blue-500 text-white py-2 rounded hover:bg-blue-600 transition"
      >
        ﾄ斉ハg nh蘯ｭp
      </button>
    </form>

    <p id="message" class="text-center mt-4 text-sm"></p>

    <p class="text-center text-gray-500 mt-4">
      Chﾆｰa cﾃｳ tﾃi kho蘯｣n?
      <a href="/taikhoan/register" class="text-blue-500 hover:underline">ﾄ斉ハg kﾃｽ ngay</a>
    </p>
  </div>

  <script>
    document.getElementById("loginForm").addEventListener("submit", async (e) => {
      e.preventDefault();

      const msg = document.getElementById("message");
      msg.textContent = "";
      msg.className = "text-center mt-4 text-sm";

      const formData = Object.fromEntries(new FormData(e.target).entries());

      try {
        // 沺｢ G盻ｭi yﾃｪu c蘯ｧu ﾄ惰ハg nh蘯ｭp
        const resLogin = await fetch("http://localhost:3000/taikhoan/dangnhap", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(formData),
        });

        const dataLogin = await resLogin.json();
        if (!resLogin.ok) throw new Error(dataLogin.thong_bao || "ﾄ斉ハg nh蘯ｭp th蘯･t b蘯｡i");

        // 笨 Lﾆｰu token vﾃo localStorage
        localStorage.setItem("token", dataLogin.token);

        // 沺｢ G盻絞 API l蘯･y thﾃｴng tin ngﾆｰ盻拱 dﾃｹng
        const resInfo = await fetch("http://localhost:3000/taikhoan/thongtin", {
          headers: { "Authorization": `Bearer ${dataLogin.token}` },
        });

        const dataInfo = await resInfo.json();
        if (!resInfo.ok) throw new Error(dataInfo.thong_bao || "Khﾃｴng l蘯･y ﾄ柁ｰ盻｣c thﾃｴng tin ngﾆｰ盻拱 dﾃｹng");

        const user = dataInfo.du_lieu;

        msg.textContent = "ﾄ斉ハg nh蘯ｭp thﾃnh cﾃｴng! ﾄ紳ng chuy盻ハ hﾆｰ盻嬾g...";
        msg.classList.add("text-green-600");

        // 洫ｭ Chuy盻ハ hﾆｰ盻嬾g theo vai trﾃｲ
        setTimeout(() => {
          if (user.vai_tro_id === 1) {
            window.location.href = "/admin";
          } else {
            window.location.href = "/pos";
          }
        }, 1000);

      } catch (err) {
        msg.textContent = err.message;
        msg.classList.add("text-red-600");
      }
    });
  </script>

</body>
</html>
